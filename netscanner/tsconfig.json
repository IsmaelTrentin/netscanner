{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react",
    "downlevelIteration": true,
    "typeRoots": [ "./src/@types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["./node_modules", "./src/@types"]
}
